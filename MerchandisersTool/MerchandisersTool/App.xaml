<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MerchandisersTool.App">
    <Application.Resources>
        <Style x:Key="merchBtns" TargetType="Button">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="WidthRequest" Value="300"/>
            <Setter Property="BackgroundColor" Value="SandyBrown"/>
            
        </Style>
        <Style x:Key="supBtns" TargetType="Button">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="WidthRequest" Value="300"/>
            <Setter Property="BackgroundColor" Value="MediumPurple"/>
        </Style>
    </Application.Resources>
</Application>