<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MerchandisersTool.Views.LandingPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#E2D1B1">
            <Label Text="Welcome to Merchandisers Tool"
                   FontSize="60"
                   FontFamily="SansSeriff"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Style="{StaticResource Key=merchBtns}"
                    Text="Merchandiser Login"
                    FontSize="Medium"
                    FontFamily="SansSeriff"
                    VerticalOptions="Center"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="Button_Clicked"/>
            <Button Style="{StaticResource Key=supBtns}" 
                Text="Supervisor Login"
                    FontSize="Medium"
                    FontFamily="SansSeriff"
                    VerticalOptions="Center"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="Button_Clicked_1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>